<h1>タスク詳細</h1>
<div class="row">  
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="table-task-details">
      <tbody>
        <tr>
          <th class="active col-md-2">ID</th><td><%= @task.id %></td>
        </tr>
        <tr>
          <th class="active">名称</th><td><%= @task.title %></td>
        </tr>
        <tr>
          <th class="active">詳細</th><td id="details"><%= @task.details %></td>
        </tr>
        <tr>
          <th class="active">作成日</th><td><%= l(@task.created_at, format: :long) %></td>
        </tr>
        <tr>
          <th class="active">更新日</th><td><%= l(@task.updated_at, format: :long) %></td>
        </tr>
      </tbody>
    </table>
    <div>
      <%= link_to "編集", edit_user_task_path(@user.id, @task), class: "btn btn-success" %>
      <%= link_to "削除", user_task_path(@user.id, @task), method: :delete,
                  data: { confirm: "を削除してよろしいですか？" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>  
  