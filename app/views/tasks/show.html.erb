<h1>タスク詳細</h1>
<div>  
  <table class="table table-bordered" id="table-task-details" align="center">
    <tr>
      <th class="col-md-1 active">ID</th><td class="col-md-5"><%= @task.id %></td>
    </tr>
    <tr>
      <th class="active">名称</th><td><%= @task.title %></td>
    </tr>
    <tr>
      <th class="active">詳細</th><td id="details"><%= @task.details %></td>
    </tr>
    <tr>
      <th class="active">作成日</th><td><%= @task.created_at %></td>
    </tr>
    <tr>
      <th class="active">更新日</th><td><%= @task.updated_at %></td>
    </tr>
  </table>
</div>  
  